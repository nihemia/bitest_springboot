<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mapper.AdminMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springboot.entity.Admin">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="sex" property="sex" />
        <result column="age" property="age" />
        <result column="phone" property="phone" />
        <result column="role" property="role" />
        <result column="img" property="img" />
    </resultMap>

<!--    2、基于直接xml方式查询数据库数据-->
    <select id="getAdmin" resultType="com.springboot.entity.Admin">
        select * from admin;
    </select>

    <select id="findbySearch" resultType="com.springboot.entity.Admin">
        select * from admin
        <where>
--             将管理员信息不显示在前端中
            role!='ROLE_ADMIN'
            <if test="params!=null and params.name!=null and params.name!=''">
                and name like concat('%',#{params.name},'%')
            </if>
            <if test="params!=null and params.phone!=null and params.phone!=''">
                and phone like concat('%',#{params.phone},'%')
            </if>
        </where>
    </select>
